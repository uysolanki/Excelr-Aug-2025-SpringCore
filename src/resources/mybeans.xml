<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
    
    <bean id="e1" class="com.excelr.model.Engine" scope="prototype" >
    	<constructor-arg value="2500"></constructor-arg>
    	<constructor-arg value="25"></constructor-arg>
   		<constructor-arg value="Petrol"></constructor-arg>
    	<constructor-arg value="Honda"></constructor-arg> 
    </bean>
   
	
    <bean id="e2" class="com.excelr.model.Engine">
    	<property name="engineCC">
    	<value>3000</value>
    	</property>
    	
    	<property name="engineLiter">
    	<value>30</value>
    	</property>
    	
    	<property name="engineType">
    	<value>Diesel</value>
    	</property>
    	
    	<property name="engineMfg">
    	<value>Toyota</value>
    	</property>
    </bean>
  
    <bean id="g1" class="com.excelr.model.Gear">
    	<constructor-arg value="8"></constructor-arg>
    	<constructor-arg value="Automatic"></constructor-arg>
   		<constructor-arg value="Tata"></constructor-arg>
    </bean>
    
     <bean id="g2" class="com.excelr.model.Gear">
     	<property name="gearLever">
     		<value>12</value>
     	</property>
     	
     	<property name="gearType">
     		<value>Manual</value>
     	</property>
     	
     	<property name="gearMfg">
     		<value>Volvo</value>
     	</property>
     </bean>
     
    	
      <bean id="c1" class="com.excelr.model.Car">
      	<constructor-arg value="Innova"> </constructor-arg>
      	<constructor-arg value="Toyota"> </constructor-arg>
      	<constructor-arg value="100.0"> </constructor-arg>
      	<constructor-arg value="White"> </constructor-arg>
      	<constructor-arg ref="e2"> </constructor-arg>
      	<constructor-arg ref="g1"> </constructor-arg>
      </bean>
    
</beans>
